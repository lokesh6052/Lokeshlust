<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-4">
        <h3 class="heading">Edit your Listing</h3>
    
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="mt-5 needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">
                Your Title is Awesome üòç
            </div>
            <div class="invalid-feedback">
                Your Title is in incorrect form ‚ùå
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea> 
            <div class="valid-feedback">
                Your Description is Awesome üòç
            </div>
            <div class="invalid-feedback">
                Your Description is in incorrect form ‚ùå
            </div>
        </div>

        <div class="mb-3">
            <b>Original Listing Image</b> <br><br>
          <img src="<%= originalImageUrl %>" alt="preview of original image">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]" class="form-control">
        </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
            <div class="invalid-feedback">
                Your price is not correct ‚ùå, please try again!
            </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="valid-feedback">
                Your Location is so Nice place üòç
            </div>
            <div class="invalid-feedback">
                please give your live location of living!
            </div>
        </div>
    </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
            <div class="valid-feedback">
                Your Country is Awesome üòç
            </div>
            <div class="invalid-feedback">
                Your country name is not valid ‚ùå
            </div>
        </div>

        <br><br>
        <button type="submit" class="btn1 btn-outline-danger">Edit Listing</button>
        <br><br><br>
    </form>
</div>
</div>
</body>