<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3 class="heading mt-4" >All Listings</h3>
<!-- 
    <form method="get" action="/listings/new">
        <button>Create new Listing</button>
    </form> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
    <% for(let listing of allListings) { %>
   <a href="/listings/<%= listing._id %>" class="listing-links">     
    <div class="card cols card-1">
        <img src="<%= listing.image.url %>"
        class="card-img-top card-img-top-1" alt="listing image" style="height: 18rem;">
        <div class="card-body">
            <p class="card-text">
               <b><%= listing.title %></b><br>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> /Night
            </p>
        </div>
    </div>
</a>
    <% } %>
</div>
</body>